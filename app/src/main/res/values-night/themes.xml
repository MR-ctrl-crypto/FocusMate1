<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Application Theme for Dark Mode -->
    <!-- FIX: Changed parent to the guaranteed-to-exist MaterialComponents theme -->
    <style name="Base.Theme.FocusMate" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorSurfaceContainer">@color/dark_surface</item>


        <!-- Primary Branding -->
        <item name="colorPrimary">@color/dark_primary_blue</item>
        <item name="colorPrimaryContainer">@color/dark_primary_blue_dark</item>

        <!-- Secondary (Pause) -->
        <item name="colorSecondary">@color/dark_pause_green</item>
        <item name="colorSecondaryContainer">@color/dark_pause_green</item>

        <!-- Error (Stop) -->
        <item name="colorError">@color/dark_stop_red</item>

        <!-- Background / Surface -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_text_primary</item>
        <item name="colorOnBackground">@color/dark_text_primary</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>

        <!-- Material Component Colors -->
        <item name="colorOutline">@color/dark_divider_gray</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/dark_surface</item>

        <!-- Switch / Toggle -->
        <item name="colorControlNormal">@color/dark_switch_track_off</item>
        <item name="colorControlActivated">@color/dark_primary_blue</item>

        <!-- Add this inside the dark mode Base.Theme.FocusMate -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>

    </style>

    <!-- You can also define dark-mode specific versions of other styles if needed -->
    <style name="AppTheme.NumberPicker" parent="Theme.AppCompat"> <!-- Changed to base AppCompat for dark -->
        <item name="android:textColorPrimary">@color/dark_primary_blue</item>
        <item name="android:colorControlNormal">@color/dark_divider_gray</item>
    </style>

    <!-- Add this new style to the dark mode themes.xml -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/dark_surface</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
