<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signUpFragment">

    <!-- SignUp Fragment Destination -->
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.focusmate.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <!-- Action to go FROM SignUp TO Login -->
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Login Fragment Destination -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.focusmate.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <!-- Action to go FROM Login TO SignUp -->
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <!-- Action to go FROM Login TO Home -->
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Home Fragment Destination -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.focusmate.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />

</navigation>
