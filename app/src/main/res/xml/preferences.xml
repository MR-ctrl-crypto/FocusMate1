<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Account">

        <Preference
            app:key="user_account"
            app:title="Email"
            app:summary="Loading..." />

        <Preference
            app:key="manage_account"
            app:title="Manage Account"
            app:summary="Update your profile" />

    </PreferenceCategory>

    <PreferenceCategory app:title="General">

        <SwitchPreference
            app:key="notifications"
            app:title="Enable Notifications"
            app:defaultValue="true" />



    </PreferenceCategory>

    <PreferenceCategory app:title="Appearance">

        <ListPreference
            app:key="theme_preference"
            app:title="Theme"
            app:summary="%s"
            app:defaultValue="system"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values" />

    </PreferenceCategory>


    <!-- ===================== END OF CORRECTED SECTION ==================== -->

</PreferenceScreen>
