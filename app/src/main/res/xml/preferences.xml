<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Appearance">

        <ListPreference
            app:key="theme_preference"
            app:title="Theme"
            app:summary="Choose the application theme"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:defaultValue="system" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Account">

        <Preference
            app:key="manage_account"
            app:title="Manage Account"
            app:summary="Change your username and picture" />

        <!-- ==================================================== -->
        <!-- THIS IS THE MISSING PIECE. ADD THIS BLOCK OF CODE.    -->
        <!-- ==================================================== -->
        <Preference
            app:key="logout"
            app:title="Logout"
            app:summary="Sign out of your account" />
        <!-- ==================================================== -->

    </PreferenceCategory>

</PreferenceScreen>

