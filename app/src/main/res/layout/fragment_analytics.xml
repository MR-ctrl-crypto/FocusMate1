<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".AnalyticsFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/label_analytics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Analytics"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnDaily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:backgroundTint="#33ADD8E6"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="105dp" />

        <Button
            android:id="@+id/btnWeekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:backgroundTint="#33ADD8E6"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="105dp" />

        <Button
            android:id="@+id/btnMonthly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:backgroundTint="#33ADD8E6"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="105dp" />

        <TextView
            android:id="@+id/label_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overview"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="51dp"
            android:layout_marginTop="185dp" />

        <TextView
            android:id="@+id/label_focus_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Focus Time"
            android:textSize="11dp"
            android:layout_marginLeft="51dp"
            android:layout_marginTop="216dp" />

        <TextView
            android:id="@+id/focus_timer"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="51dp"
            android:layout_marginTop="241dp"
            android:textColor="@android:color/black"
            android:text="0 min"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/label_avg_session"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avg. Session Length"
            android:textSize="11dp"
            android:layout_marginLeft="237dp"
            android:layout_marginTop="216dp" />

        <TextView
            android:id="@+id/avg_timer"
            android:layout_width="98dp"
            android:layout_height="31dp"
            android:layout_marginLeft="237dp"
            android:layout_marginTop="241dp"
            android:textColor="@android:color/black"
            android:text="0 min"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/label_distraction_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distraction Time"
            android:textSize="11dp"
            android:layout_marginLeft="51dp"
            android:layout_marginTop="302dp" />

        <TextView
            android:id="@+id/distraction_timer"
            android:layout_width="91dp"
            android:layout_height="34dp"
            android:layout_marginLeft="51dp"
            android:layout_marginTop="325dp"
            android:textColor="@android:color/black"
            android:text="0 min"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/label_completed_sessions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sessions Completed"
            android:textSize="11dp"
            android:layout_marginLeft="237dp"
            android:layout_marginTop="302dp" />

        <TextView
            android:id="@+id/sessions_completed"
            android:layout_width="103dp"
            android:layout_height="32dp"
            android:layout_marginLeft="237dp"
            android:layout_marginTop="328dp"
            android:textColor="@android:color/black"
            android:text="0"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/label_time_breakdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Breakdown - Daily"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="51dp"
            android:layout_marginTop="408dp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="440dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />

    </FrameLayout>
</ScrollView>
